.alert {
  background-color: white;
  border: 1px solid red;
  border-radius: 4px;
  color: #333;
<% if use_bootstrap %>

  &.alert--alert {
    @extend .alert-danger;
  }
  &.alert--error {
    @extend .alert-danger;
  }
  &.alert--info {
    @extend .alert-light;
  }
  &.alert--notice {
    @extend .alert-info;
  }
<%- end %>
}
