doctype html
html
  head
    title AppName
    meta charset="utf-8"
    meta name="viewport" content="width=device-width, initial-scale=1"
    = csrf_meta_tags
    = csp_meta_tag

<% if skip_turbolinks %>
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_pack_tag 'application'
<% else %>
    - turbolinks = {'data-turbolinks-track': 'reload'}
    = stylesheet_link_tag 'application', media: 'all', **turbolinks
    = javascript_pack_tag 'application', **turbolinks
<% end %>

  body
    = AlertsPresenter.flashes(self)
    = yield
