# Config for Rubocop.

inherit_gem:
  rubocop-configs:
    - _all_cops.yml
    - _ruby.yml
    - bundler.yml
<% if capybara %>
    - capybara.yml
<% end %>
<% if factory_bot %>
    - factory_bot.yml
<% end %>
<% if graphql %>
    - graphql.yml
<% end %>
    - performance.yml
    - rails.yml
    - rake.yml
<% if rspec %>
    - rspec.yml
    - rspec_rails.yml
<% end %>
<% if rswag %>
    - rswag.yml
<% end %>
<% if sequel %>
    - sequel.yml
<% end %>
    - thread_safety.yml

AllCops:
  TargetRubyVersion: <%= Gem.ruby_version.segments[0..1].join(".") %>

Naming/FileName:
  Exclude:
    - .tools/Gemfile

<% if detected_features[:settings] %>
Layout/RedundantLineBreak:
  Exclude:
    - config/initializers/settings.rb
<% end %>

Style/ClassAndModuleChildren:
  Exclude:
    - '.tools/**/*.rb'

<% if factory_bot %>
Layout/RedundantLineBreak:
  Exclude:
    - 'factories/**/*.rb'
<% end %>
